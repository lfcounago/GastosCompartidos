<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Crear un grupo"
                android:textSize="34sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del grupo"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/group_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe el nombre del grupo"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Divisa"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/currency_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="CategorÃ­a"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Usuarios del grupo"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/users_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe los emails separados por comas"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/create_group_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Crear grupo"
                android:backgroundTint="@color/green2"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bttCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToActividadAnterior"
                android:text="Cancelar"
                android:backgroundTint="@color/green2"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>